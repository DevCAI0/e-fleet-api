    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Verificar se tem token de auth",
                    "if (!pm.environment.get('auth_token')) {",
                    "    console.log('⚠️ Token de autenticação não encontrado!');",
                    "    console.log('Execute primeiro o login na collection de Auth');",
                    "}"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Script global para todas as requisições",
                    "if (pm.response.code === 401) {",
                    "    console.log('❌ Token expirado ou inválido. Faça login novamente.');",
                    "}",
                    "",
                    "if (pm.response.code >= 200 && pm.response.code < 300) {",
                    "    console.log('✅ Requisição bem-sucedida');",
                    "} else {",
                    "    console.log('❌ Erro na requisição:', pm.response.code);",
                    "}"
                ]
            }
        }
    ],
    "variable": [
